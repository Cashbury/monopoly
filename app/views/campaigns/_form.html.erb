<%= form_for @campaign do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :action %><br />
    <%= f.text_field :action %>
  </p>
  <p>
    <%= f.label :expire_at %><br />
    <%= f.datetime_select :expire_at %>
  </p>
  <p><%= f.submit %></p>
<% end %>
