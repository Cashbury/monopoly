      jQuery('#toggle_a').css('color','#CDCDCD');
    });*/
    function send_check_request(){
      jQuery.ajax({
        type: 'GET',
        url: '/check_status/<%=@qr_code.id%>?index='+index,
        ifModified: true,
        success: function(data){
          if(data!=null){
            if(data.response_text!="" && index!=data.index){
              jQuery('.container').append(data.response_text);
              jQuery('#scanning_summary').html("Scanned: "+ data.no_of_scanning+" times by "+data.no_of_users+" number of people");
            }
            index=data.index;
            //if(data.response_text!="") {jQuery('.toggle_link').show();}
            
          }
        }
      });
    }
  });
