<%title 'Issue QrCodes'%>
<script type="text/javascript" language="javascript" charset="utf-8">
//<![CDATA[
jQuery(function(){

  jQuery("select#engagement_id").bind('change',function(e){
    var $e = jQuery(this);
    jQuery("#associatable_id").val($e.val());
  });

  jQuery('select#brand_id').bind('change',function(){
    var brand_id = jQuery(":selected", this).val();
    jQuery.getScript("/qr_codes/update_businesses/"+brand_id);
  });

  jQuery('select#business_id').bind('change',function(){
    var business_id = jQuery(":selected", this).val();
    jQuery.getScript("/qr_codes/update_programs/"+business_id);
  });

  jQuery('select#program_id').bind('change',function(){
    var program_id = jQuery(":selected", this).val();
    jQuery.getScript("/qr_codes/update_campaigns/"+program_id);
  });

  jQuery('select#campaign_id').bind('change',function(){
    var campaign_id = jQuery(":selected", this).val();
    jQuery.getScript("/qr_codes/update_engagements/"+campaign_id);
  });


  jQuery("#associate_link").click(function(){
    if (jQuery(this).html()=="Associate now")
      jQuery(this).html("Cancel");
    else
      jQuery(this).html("Associate now");
      jQuery("#associate_box").slideToggle();

    });

  jQuery("#user_id").autocomplete({
      source:"/get_users.json",
      select:function(e,ui){
        jQuery("#associatable_id.associate").val(ui.item.id);
      }
  });

  jQuery("input[name=btype]").click(function(e){
      jQuery(".row.users").toggle();
      jQuery(".row.brands").toggle();
      })

  jQuery(".tabs").tabs({
    select:function(e,ui){
    var data = $(ui.tab).attr("data-c");
      $("#associatable_type").val(data);
    }
  });
})
//]]>
</script>
<style type="text/css" media="screen">
  .hide{
    display:none;
  }
</style>

<%= form_tag do |form| %>
  <p class="row">
    <strong>QrCode Type</strong> <br/>
    <%=  select_tag :code_type , options_for_select( {"OneTime Use"=>0, "MultipleTimes Use"=>1 },1) %>
  </p>
  <p class="row">
    <strong>QrCode Status</strong> <br/>
    <%=  select_tag :status , options_for_select( {"Inactive"=>0, "Active"=>1 },1) %>
  </p>
  <p class="row">
    <strong>Quantity</strong><br/>
    <%=  text_field_tag :quantity , 1 , :class => "basic_info_input"%> *(max 100)
  </p>
  <p class="row">
    <a id="associate_link" href="javascript:void(0)">Associate now</a>
  </p>
  <div id="associate_box" class="row" style="display:none">


    <div class="tabs">
    	<ul>

    		<li>
    			<a href="#brands" data-c="Engagement">brands</a>
                </li>
    		<li>
                  <a href="#users" data-c="User">Users</a>
    		</li>
              </ul>

              <div id="users">
    <p class="row users">
      <strong>Users</strong> <br/>
      <%= text_field_tag :user_id , "" , :class=>"complete"%>
    <p class="row">
      <%= submit_tag "Submit" %>
    </p>
    </p>
            </div>
            <div id="brands">

    <p class="row brands ">
      <strong>Brand</strong> <br/>
      <%= select_tag :brand_id ,"<option value=''>Select One...</option>".html_safe + options_from_collection_for_select(@brands , :id, :name) %>
    </p>
    <p class="row">
      <strong>Business</strong> <br/>
      <%= select_tag :business_id , ""%>
    </p>
    <p class="row">
      <strong>Program</strong> <br/>
      <%= select_tag :program_id , ""%>
    </p>
    <p class="row">
      <strong>Campaign</strong> <br/>
      <%= select_tag :campaign_id , ""%>
    </p>
    <% engagement_options = "<option value=''>..Engagements ..</option>".html_safe %>
    <p class="row">
     <strong>Engagement</strong> <br/>
     <%= select_tag :engagement_id, engagement_options ,:class=>"associate" %>
    </p>
    <%= hidden_field_tag :associatable_type, "Engagement"%>
    <%= hidden_field_tag :associatable_id , nil , :class=>"associate" %>
  <p class="row">
    <%= submit_tag "Submit" %>
  </p>
</div>
  <div style="clear:both">

  </div>
  </div>
    </div>


  <% end %>
