<% if params[:title].present? %>
 <% title_txt= "Users- Search - #{params[:title]}"%>
<%else%>
 <% title_txt= "Users"%>
<%end%>
<% title title_txt %>
<% form_tag(users_management_index_path, {:method => :get}) do %>
  <p style="margin-bottom:0.1em">
    <label>Search</label>
    <%=text_field_tag('title', "#{params[:title]}", :class => "input_text large") %>
    <input type="submit" value="List" />
  </p>
  <p><small style="color:grey; font-size:11px">Keywords could be Name, Email, Telephone Number, User ID (QrCode) </small></p>
<% end %>
<p><h2><b>Total: <%=@users.total_entries%></b></h2></p>
<br />
  <%= will_paginate @users %>
<br/>
<table class="mono-table" width="600px"  border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th>Photo</th>
    <th>Full Name</th>
    <th>Email</th>
    <th>Telephone Number</th>
    <th>Created On</th>
    <th>Login Count</th>
    <th>Sign In IP</th>
    <th>Available Balance Amount</th>
    <th>Confirmed</th>
    <th>Admin?</th>
    <th>FB status</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <% user_uid=user.email.split("@facebook").first %>
    <td width="77"><%=image_tag user.email.match(/facebook/) ? "https://graph.facebook.com/#{user_uid}/picture" : "/images/user-default.jpg" %></td>
    <td width="100"><%= user.full_name%></td>
    <td width="120"><%= link_to user.email, users_management_path(user) %></td>
    <td><%= user.telephone_number %></td>
    <td><%= user.created_at.to_formatted_s(:long)%></td>
    <td><%= user.sign_in_count %></td>
    <td><%= user.current_sign_in_ip%></td>
    <td><%= user.amount || 0  %></td>
    <td><%= status_icon user.confirmed_at.nil? %></td>
    <td><%= status_icon user.admin? %></td>
    <td><%= status_icon user.is_fb_enabled %></td>
    <td class="fat">
      <%= link_to 'Edit', edit_users_management_path(user) ,:class=>"button"%>
      <%= link_to 'Destroy', users_management_path(user), :confirm => 'Are you sure?', :method => :delete ,:class=>"button negative" %>
    </td>
  </tr>
<% end %>
</table>
<br />
  <%= will_paginate @users %>
<br/>

<%= link_to "Add new user", new_users_management_path , :class=>"button"  %>

<style type="text/css" media="screen">
  .mono-table .fat{width:130px; padding:0 0 0 8px;}
</style>
