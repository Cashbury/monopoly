<% title "Brand | #{@brand.name}" %>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @brand.name %>
</p>

<p>
  <b>Description:</b>
  <%= @brand.description %>
</p>

<p>
  <b>Photo:</b>
  <% if @brand.brand_image%>
    <%= image_tag @brand.brand_image.photo.url(:normal) %>
  <% end %>
</p>  
<%= link_to 'Edit', edit_brand_path(@brand) %> |
<%= link_to 'Back', brands_path %>
