<% title "Crop Brand Image" %>  
<% content_for (:head) do %>  
<%= stylesheet_link_tag "jquery.Jcrop" %>  
<style type="text/css">
	.image-crop div.item{ float:left; margin-right:40px;}
	.image-crop h3{ font-size:18px;}
	.image-crop p{ font-size:13px;}
	.image-crop .arrow{margin-top:40px;}
	
  /*--Clearfix--*/
  .clearfix:after, .container:after {content:"\0020";display:block;height:0;clear:both;visibility:hidden;overflow:hidden;}
  .clearfix{display:block;}

</style>

<%= javascript_include_tag "jquery.Jcrop.min" %>  
<script type="text/javascript">  
  jQuery(function() {  
    jQuery('#cropbox').Jcrop({  
      onChange: update_crop,  
      onSelect: update_crop,  
      setSelect: [0, 0, 81, 52],
      allowResize: false,
      allowSelect: false 
    });  
  });  
  function update_crop(coords) {  
    var rx = 81/coords.w;  
    var ry = 52/coords.h;  
    jQuery('#preview').css({  
      width: Math.round(rx * <%= @brand.brand_image.photo_geometry(:normal).width %>) + 'px',  
      height: Math.round(ry * <%= @brand.brand_image.photo_geometry(:normal).height %>) + 'px',  
      marginLeft: '-' + Math.round(rx * coords.x) + 'px',  
      marginTop:  '-' + Math.round(ry * coords.y) + 'px'  
    });    
    jQuery('#crop_x').val(coords.x);  
    jQuery('#crop_y').val(coords.y);  
    jQuery('#crop_w').val(coords.w);  
    jQuery('#crop_h').val(coords.h);   
  }    
</script>  
<% end %> 
<div class="image-crop clearfix">
	<div class="item">
  	<h3>Original</h3>
    <div><%= image_tag @brand.brand_image.photo.url(:normal), :id => "cropbox" %>  </div>
    <p>Drag the selected area to adjust </p>
  </div>
  <div class="arrow item"><img src="/images/go-previous-rtl.png"  /></div>
  <div class="item">
  	<h3>Preview</h3>
    <div style="width: 81px; height: 52px; overflow: hidden;">  
    <%= image_tag @brand.brand_image.photo.url(:normal), :id => "preview" %>
    </div>
  </div>	
</div>
<%= form_for @brand do |f| %>  
  <%= f.fields_for :brand_image,f.object.brand_image do |builder| %>
    <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>  
      <p><%=attribute%>: <%= builder.text_field attribute, :id => attribute,:readonly => true %></p>  
    <% end %>  
  <%end%>
<p><%= f.submit "Crop" %></p>  
<% end %>  
