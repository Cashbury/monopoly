<h2>Sign up</h2>

<div id="step1" class="mono-business-register span-12 last">
  <%= form_for(resource, :as=>resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  <p>
    <%= f.label :email , :class=>"hide" %>
    <%= f.email_field :email,  :class=>"title double email" , :placeholder=>"Email address"  %>
  </p>

  <p>
    <%= f.label :password , :class=>"hide" %>
    <%= f.password_field :password, :class=>"title" ,:placeholder=>"Create password" %>
  </p>

  <p class="clearfix">
    <%= f.label :password_confirmation , :class=>"hide" %>
    <%= f.password_field :password_confirmation , :class=>"title" , :placeholder=>"Verify password"  %>
  </p>

  <p>
    <%= f.submit "Signup" %>
  </p>
  <% end %>
</div>
