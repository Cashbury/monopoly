<% title "Sign In" %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class=>"mono-form") do |f| %>
  <p><%= f.label :email, :class=>"hide" %>
  <%= f.text_field :email, :class=>"title double", :placeholder=>"Email address" %></p>
  <p><%= f.label :password, :class=>"hide" %>
  <%= f.password_field :password ,:class=>"title double", :placeholder=>"Password" %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>



