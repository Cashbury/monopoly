<h1>Listing neighborhoods  </h1>

<%= form_tag("/countries" , :method=>:GET) do %>
  <%= text_field_tag "name" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @neighborhoods.each do |neighborhood| %>
  <tr>
    <td><%= neighborhood.name %></td>
    <td><%= neighborhood.city.try :name %></td>
    <td><%= link_to 'Show', neighborhood %></td>
    <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood) %></td>
    <td><%= link_to 'Destroy', neighborhood, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Neighborhood', new_neighborhood_path %>
