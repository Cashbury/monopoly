<% title "Rewards" %>

<table width="100%" border="1" cellspacing="0" cellpadding="0">
  <tr>
    <th>Name</th>
  </tr>
  <% for reward in @rewards %>
    <tr>
      <td><%= link_to reward.name, business_reward_path(@business, reward) %></td>
      <td><%= link_to "Edit", edit_business_reward_path(@business, reward) %></td>
      <td><%= link_to "Destroy", business_reward_path(@business, reward), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Reward", new_business_reward_path(@business) %></p>
