<%= form_for @reward, :url => business_campaign_rewards_url do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :points %>
    <%= f.text_field :points %>
  </p>
  <p><%= f.submit %></p>
<% end %>
