<%= form_for @category do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.select  :parent_id, Category.all.collect{|c| [c.name,c.id] unless c.id==@category.try(:id)} , {:include_blank=>true} %>
  </p>
  <p><%= f.submit %></p>
<% end %>
