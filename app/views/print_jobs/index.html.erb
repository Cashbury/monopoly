<h1>Listing print_jobs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>
      Printed At
    </th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @print_jobs.each do |print_job| %>
  <tr>
    <td><%= print_job.name %></td>
    <td><%= print_job.created_at.to_formatted_s(:short) %></td>
    <td><%= link_to 'Show', print_job %></td>
    <td><%= link_to 'Edit', edit_print_job_path(print_job) %></td>
    <td><%= link_to 'Destroy', print_job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

