<% title "Newsletters" %>

<table>
  <tr>
    <th>Letter Type</th>
    <th>Name</th>
    <th>Email</th>
  </tr>
  <% for newsletter in @newsletters %>
    <tr>
      <td><%= newsletter.letter_type %></td>
      <td><%= newsletter.name %></td>
      <td><%= newsletter.email %></td>
      <td><%= link_to "Show", newsletter %></td>
      <td><%= link_to "Edit", edit_newsletter_path(newsletter) %></td>
      <td><%= link_to "Destroy", newsletter, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Newsletter", new_newsletter_path(newsletter) %></p>
