<% title "Programs' types" %>

<table class="mono-table" width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @program_types.each do |program_type| %>
  <tr>
    <td><%= link_to program_type.name , program_type %></td>
    <td>
      <%= link_to 'Edit', edit_program_type_path(program_type), :class=>"button" %>
      <%= link_to 'Destroy', program_type, :method=>:delete, :class=>:destroy,:confirm=>"Are you sure?" , :class=>"button negative" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Program type', new_program_type_path , :class=>"button positive" %>
