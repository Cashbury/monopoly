<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "rewards-1", "global" , "redmond/jquery-ui-1.8.10.custom","scaffold" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" %>
    <%= javascript_include_tag :defaults ,'jquery-ui'%>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
    <script type="text/javascript" language="javascript" charset="utf-8">
    //<![CDATA[
        $(function(){}); 
    //]]>
    </script>
  </head>
  <body>
	  <div id="wrap">
	    <div id="header"></div><!-- end of header -->
	    <div id="main">
	      <div id="main_header">
		      <% flash.each do |name, msg| %>
	          <%= content_tag :div, msg, :id => "flash_#{name}" %>
	        <% end %>
	        <%= content_tag :h1, yield(:title) if show_title? %>
	        <%= render "shared/menu" %>
	      <div id="canvas container">
	        <%= yield %>
	      </div><!-- end of left main -->
	      <div id="right_main">
	      </div>
	    </div><!-- end of Canvase -->
	    </div>
	  </div><!-- end of Main -->
	  </div><!-- wrapper-->
  </body>
</html>
