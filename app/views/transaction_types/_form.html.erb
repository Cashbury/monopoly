    <%end%>
  </div>
  <br />
  <div class="field">
    <%= f.label :fee_amount %><br />
    <%= f.text_field :fee_amount %>
  </div>
  <br />
  <div class="field">
    <%= f.label :fee_percentage %><br />
    <%= f.text_field :fee_percentage %> %
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>