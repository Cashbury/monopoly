<% title "Business" %>
<style type="text/css" media="screen">
  table th,td{
    width:150px;
}
</style>

<h3>Category</h3>  
<p>
	<ol>  
	  <% for category in @business.categories %>
	  <li><%= h category.name %></li>  
	  <% end %>  
	</ol>
</p>
<p>
  <strong>Name:</strong>
  <%= @business.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @business.description %>
</p>
<h3>Branches</h3>
<p>
  <table>
    <tr>
      <th>Name</th>    
      <th>Address</th>    
      <th>Neiborhood</th>    
      <th>City</th>    
      <th>Zipcode</th>  
    </tr>  
	  <% for place in @business.places %>
    <tr>
      <td><%= place.name %></td>    
      <td><%= place.address1.to_s + " "+ place.address2.to_s %></td>    
      <td><%= place.neighborhood %></td>    
      <td><%= place.city %></td>    
      <td><%= place.zipcode %></td>    
    </tr>
	  <% end %>  
  </table>
</p>
<p>
  <%= link_to "Edit", edit_business_path(@business) %> |
  <%= link_to "Destroy", @business, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", businesses_path %>
</p>
<p>
  <%= link_to "Show Programs", business_programs_path(@business) %><br />
	<%= link_to "Show Rewards", business_rewards_path(@business) %>
</p>