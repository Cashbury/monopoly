<div class="fields">
<fieldset>
  <legend class="section_title">Offer Level <span class="counter_label"><%=@index || "1"%></span></legend>
  <div class="form_item_div">
    <label class="left"> Spend <%=image_tag @business.country_flag %> <%=@business.currency_code%></label>   
    <%= f.text_field :needed_money_amount,{:class=>"basic_info_caption1 test", :style=>"width:45px;margin:0 0 0"} %>
    <label class="left"> before </label>
    <%= f.text_field :end_date,{:class=>"basic_info_caption1 datepicker reward_end_date", :style=>"width:95px;margin:0 0 0", :value=> @engagement.try(:end_date)} %>
    <label class="left"> Get a <%=image_tag @business.country_flag %> <%=@business.currency_code%></label>
    <%= f.text_field :money_amount,{:maxlength=>16,:class=>"basic_info_caption1 money_amount",:style=>"width:45px;margin:0 0 0"}%>
    <label class="left"> Cash back, Offer available until </label> 
    <%= f.text_field :expiry_date,{:class=>"basic_info_caption1 datepicker reward_exp_date", :style=>"width:95px;margin:0 0 0"} %>    
    <br style="clear:both;"/>
    <label style="display:block;">Facebook msg when user unlocks a reward</label> 
    <%= f.text_field :fb_unlock_msg,:class=>"basic_info_input fb_unlock_msg", :maxlength=>100, :style=>"width: 540px;" %>
    <br style="clear:both;"/>
    <label style="display:block;">Facebook msg when user enjoys a reward</label>
    <%= f.text_field :fb_enjoy_msg,:class=>"basic_info_input fb_enjoy_msg", :maxlength=>100, :style=>"width: 540px;" %>
  </div>
</fieldset>
<%= link_to_remove_fields "remove", f %>
</div>
