<% title "Item" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Cost</th>
    <th>Product Code</th>
  </tr>
  <% for item in @items %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= item.cost %></td>
      <td><%= item.product_code %></td>
      
      <td><%= link_to "Show", business_place_item_path(@business,@place,item) %></td>
      <td><%= link_to "Edit", edit_business_place_item_path(@business,@place,item) %></td>
      <td><%= link_to "Destroy", business_place_item_path(@business, @place,item), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to "New Item", new_business_place_item_path(@business,@place) %></p>

