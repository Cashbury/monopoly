<% title "Place | #{@place.name}" %>

<p>
  <strong>Name:</strong>
  <%= @place.name %>
</p>
<p>
  <strong>Long:</strong>
  <%= @place.long %>
</p>
<p>
  <strong>Lat:</strong>
  <%= @place.lat %>
</p>
<p>
  <strong>About:</strong>
  <%= @place.about %>
</p>
<p>
  <strong>Phone Number:</strong>
  <%= @place.phone %>
</p>
<p>
  <strong>Time Zone:</strong>
  <%= @place.time_zone %>
</p>

<p>
  <strong>Tips Mode:</strong>
  <%= Place::TIPS_MODES.key(@place.tips_mode) %>
</p>
<p>
  <strong>Tag List:</strong>
  <%= @place.tag_list %>
</p>
<p>
  <strong>Open Hours:</strong>
  <ul>
    <% @place.open_hours.each do  |open_hour|%>
      <li><%= OpenHour::DISPLAY_DAYS[open_hour.day_no]%> From <%= OpenHour.format_time(open_hour.from)%> To  <%= OpenHour.format_time(open_hour.to)%></li>
    <% end%>
  </ul>
</p>
<%unless @place.place_images.empty?%>
<p>
  <strong>Images</strong>
  <%for image in @place.place_images%> 
    <%= image_tag image.photo.url(:thumb) %>
  <%end%>
</p>
<%end%>
<p>
  <%= link_to "Edit",  edit_business_place_path %> |
  <%= link_to "Destroy", business_place_path(@business, @place), :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", business_places_path %>
  <%= link_to "Show Items", business_place_items_path(@business,@place) %>
</p>
