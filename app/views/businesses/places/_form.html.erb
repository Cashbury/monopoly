            <%= pimage.check_box(:delete_photo) %><br />
          <%- else -%>
            <br />
            <%= pimage.label(:photo, 'Upload photo') %>
            <%= pimage.file_field(:photo) %><br />
          <%- end -%>
        <%end%>
      <%end%>
    </p>
  </fieldset>
   <br />
