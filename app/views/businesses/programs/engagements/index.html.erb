<% title "Engagements" %>

<table width="100%" border="1" cellspacing="0" cellpadding="0">
  <tr>
    <th>Name</th>
    <th>Engagement Type</th>
    <th>Points</th>
    <th>State</th>
  </tr>
  <% for engagement in @engagements %>
    <tr>
      <td><%= link_to engagement.name , business_program_engagement_url(@business, @program, engagement) %></td>
      <td><%= link_to engagement.engagement_type, business_program_engagement_url(@business, @program, engagement) %></td>
      <td><%= engagement.points %></td>
      <td id="current_status_<%=engagement.id%>"><%= engagement.state %></td>
      <td><%= link_to "Edit", edit_business_program_engagement_path(@business,@program, engagement) %></td>
      <td><%= link_to "Destroy", business_program_engagement_path(@business, @program, engagement), :confirm => 'Are you sure?', :method => :delete %></td>
      <td>
      	<%if engagement.state == "started"%>
      		<%= link_to "Stop",  "#", :onclick=>"change_engagement_status('#{engagement.id}')",:id=>"status_#{engagement.id}"%>
      	<%else%>
      		<%= link_to "Start","#", :onclick=>"change_engagement_status('#{engagement.id}')" ,:id=>"status_#{engagement.id}"%>
				<%end%>
			</td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Engagement", new_business_program_engagement_path(@business,@program) %></p>