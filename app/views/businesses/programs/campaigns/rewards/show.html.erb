<% title "Reward" %>

<p>
  <strong>Name: </strong>
  <%= @reward.name %>
</p>
<p>
  <strong>Short Description:</strong>
  <%= @reward.heading1 %>
</p>
<p>
  <strong>Description:</strong>
  <%= @reward.heading2 %>
</p>
<p>
  <strong>Needed Amount</strong>
  <%= @reward.needed_amount %>
</p>
<% unless @campaign.engagements.empty? %>
<p>
  <strong>Stamp Description: </strong>
  <% for eng in @campaign.engagements %>
  <%= eng.name %>
  <%end%>
</p>
<p>
  <b>Photo:</b>
  <% if @reward.reward_image%>
    <%= image_tag @reward.reward_image.photo.url(:thumb) %>
  <% end %>
</p>
<p>
  <strong>Legal Terms:</strong>
  <%= @reward.legal_term  %>
</p>  
<% end %>

<p>
  <%= link_to "Edit", edit_business_program_campaign_reward_path(@business, @program, @campaign ,@reward) %> |
  <%= link_to "Destroy", business_program_campaign_reward_path(@business, @program, @campaign, @reward), :confirm => 'Are you sure?', :method => :delete %> | 
  <%= link_to "Back to List", business_program_campaign_rewards_path(@business,@program,@campaign) %>
</p>
